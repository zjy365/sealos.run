{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/*"]
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "lf",
		"attributePosition": "multiline",
		"expand": "auto",
		"bracketSameLine": false,
		"bracketSpacing": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				// Tailwind uses some non-standard at-rules.
				"noUnknownAtRules": "off"
			},
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"next/link": "Use <Link> exported from @/libs/i18n/navigation to get i18n support."
						},
						"patterns": [
							{
								"group": "next/navigation",
								"importNamePattern": "redirect|usePathname|useRouter|getPathname",
								"message": "Use navigation utils from @/libs/i18n/navigation to get i18n support."
							},
							{
								"group": "react",
								"importNamePattern": "default",
								"invertImportNamePattern": true,
								"message": "Use \"import React from 'react'\" instead."
							},
							{
								"group": "next-intl",
								"importNamePattern": "useTranslations",
								"message": "use \"import { useTranslations } from '@/libs/i18n/client'\" instead"
							},
							{
								"group": "next-intl/server",
								"importNamePattern": "getTranslations",
								"message": "use \"import { getTranslations } from '@/libs/i18n/server'\" instead"
							}
						]
					}
				}
			},
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingCommas": "all"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
